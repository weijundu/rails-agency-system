<div class="form-container container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-md-4 col-md-offset-4">
      <h1>Profile</h1>
      <%= simple_form_for @profile do |t| %>
        <%= t.input :first_name, class: "form-control" %>
        <%= t.input :last_name, class: "form-control" %>
        <%= t.input :trade, :collection => %w[carpenter boilermaker carpet/layer electrician ironworker insulation millwright plumber plasterer glazier]%>
        <%= t.input :skills, class: "form-control" %>
        <%= t.input :borough, class: "form-control" %>
        <%= t.input :cv, label: "Personal statement", class: "form-control" %>
        <%= t.input :address, label: "Postcode", class: "form-control" %>
            <%= t.input :image %>
        <%= t.input :image_cache, as: :hidden %>
        <%= t.submit class: "btn btn-primary btn-submit" %>
      <% end %>
    </div>
        <%= link_to :back do %>
          <i class="fas fa-arrow-left profile-back", title="back"></i>
        <% end %>
        <% unless @profile.id == nil %>
          <%= link_to  user_registration_path(current_user), method: :delete, data: { confirm: "You sure?" } do%>
            <i class="far fa-trash-alt brand-red", title="deactive account"></i>
          <% end %>
        <% end %>
  </div>
</div>
