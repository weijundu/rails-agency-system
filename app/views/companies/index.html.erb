<div class="container">
<%= link_to "Back", options_path, class: "text-right"%>

<h1 class="title">Companies</h1>




    <div class="no-map-container container">
      <div class="row">

        <% @companies.each do |company|%>
          <% unless company == [""] %>
            <% if company.user == current_user || current_user.role == 'apprentice'%>
              <div class="col-xs-12 col-md-6">

                <%= link_to company_path(company) do %>
                  <div class="no-map-card">
                    <div class="name-card">
                      <h3> <%= company.name %> </h3>
                      <p><%= company.website %> </p>
                    </div>
                  </div>
                <% end %>
            </div>
            <% end %>
          <% end %>
        <% end %>
      </div>

      <% if @companies.where(user: current_user).count == 0 && policy(Company).new? %>
        <%= link_to "Add company", new_company_path, class: "btn btn-primary"%>
      <% end %>
    </div>

</div>
