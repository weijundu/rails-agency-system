<% if @company.image?  %>
<%= cl_image_tag @company.image.url(:thumbn)%>
<% else %>
<%= cl_image_tag("home-banner.jpg", width: 200, height: 200, crop: :fill) %>
<% end %>



<h1><%= @company.name %></h1>
<p><%= @company.intro %></p>
<p><%= @company.website %></p>
<p>created by <%= @company.user.email %></p>
<% if policy(@company).edit? %>
<%= link_to "Edit", edit_company_path(@company), class: "btn btn-primary" %>
<% end %>

<%= link_to "Back", options_path, class: "btn btn-primary"%>
